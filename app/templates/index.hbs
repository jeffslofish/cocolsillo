
<div class="login-page">
  <h1>Welcome to Cocolsillo</h1>
  <h2>Your free personal finance app</h2>
  <div class='page-header'>
    <h1>Log in</h1>
  </div>
  {{input
    type='text'
    class='form-control'
    value=email
    placeholder='email'
  }}
  {{input
    type='password'
    class='form-control'
    value=password
    placeholder='password'
  }}
  <button {{action (route-action 'authenticate' 'password' email password)}}>
    Log in
  </button>
  <br>
  <strong>Not registered yet?</strong>
  {{link-to 'Register' 'register'}}
</div>
