<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h1 class="ui">Welcome to Cocolsillo</h1>
    <h2 class="ui teal image header">
      <img src="assets/images/logo.png" class="image">
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <form class="ui large form">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            {{input
              type='text'
              class='form-control'
              value=email
              placeholder='E-mail address'
            }}
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            {{input
              type='password'
              class='form-control'
              value=password
              placeholder='Password'
            }}
          </div>
        </div>
        <button class="ui fluid large teal submit button"
          {{action (route-action 'authenticate' 'password' email password)}}>
          Log in
        </button>
      </div>
    </form>
    <div class="ui message">
      New to us? {{link-to 'Register' 'register'}}
    </div>
  </div>
</div>
