<h1>Welcome {{model.name}}!</h1>

<div class="ui relaxed divided list">
  {{#each model.accounts as |account|}}
    <div class="item">
      <i class="large middle aligned icon">
        <strong>{{account.currency.symbol}}</strong>
      </i>
      <div class="content">
        {{#link-to "main.account" account class="header"}}
          {{account.name}}
        {{/link-to}}
        <div class="description">{{account.description}}</div>
      </div>
    </div>

  {{/each}}
</div>

{{#link-to 'main.account.create'}}
  <button class="fluid ui button">Create a new account</button>
{{/link-to}}
