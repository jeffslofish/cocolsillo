<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h1 class="ui">Register into Cocolsillo</h1>
    <h2 class="ui teal image header">
      <img src="assets/images/logo.png" class="image">
      <div class="content">
        Complete this form
      </div>
    </h2>
    <form class="ui large form">
      <div class="ui stacked">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            {{input
              type='text'
              class='form-control'
              value=email
              placeholder='E-mail address'
            }}
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            {{input
              type='password'
              class='form-control'
              value=password
              placeholder='Password'
            }}
          </div>
        </div>
        <button class="ui fluid large teal submit button"
          {{action (route-action 'register' email password)}}>
          Register
        </button>
      </div>
    </form>
  </div>
</div>
